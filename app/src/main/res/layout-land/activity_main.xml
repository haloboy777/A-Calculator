<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.haloboy777.calculator.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/calculation"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="268dp"
        android:layout_height="55dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="numberSigned|numberDecimal"
        android:text="Calculation Area"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        tools:focusable="false"
        tools:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/result"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="numberSigned|numberDecimal"
        android:text="Result"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/calculation"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button1"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/calculation" />

    <Button
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/calculation" />

    <Button
        android:id="@+id/button4"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="4"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="5"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="6"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="7"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button4"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="8"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintRight_toLeftOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="9"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button6"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="+"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="3dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonMinus"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMinus"
        app:layout_constraintHorizontal_bias="0.524" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="-"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNeg" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="/"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/buttonMinus"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMinus"
        app:layout_constraintHorizontal_bias="0.573" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="*"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonNeg"
        app:layout_constraintRight_toLeftOf="@+id/buttonNeg"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        app:layout_constraintHorizontal_bias="0.566" />

    <Button
        android:id="@+id/buttonNeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="Neg"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="21dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="C"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="27dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonNeg"
        app:layout_constraintLeft_toRightOf="@+id/buttonNeg"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintLeft_toRightOf="@+id/buttonEqual"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEqual"
        app:layout_constraintHorizontal_bias="0.573" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="="
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result" />

    <Button
        android:id="@+id/button0"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:minWidth="48dp"
        android:text="0"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        app:layout_constraintRight_toLeftOf="@+id/buttonEqual"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEqual" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="@+id/calculation"
        app:layout_constraintRight_toRightOf="@+id/calculation"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

</android.support.constraint.ConstraintLayout>
